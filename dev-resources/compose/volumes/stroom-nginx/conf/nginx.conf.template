user  nginx;

worker_processes  1;

events {
    worker_connections  1024;
}

http {
    # Include generic logging configuration
    include logging.conf;
     
    # Include upstreams configuration specific to stroom
    include upstreams.stroom.conf;

    # Include upstreams configuration specific to auth
    include upstreams.auth.conf;

    # Include upstreams configuration specific to proxy
    include upstreams.proxy.conf;

    # Define valid index page filenames
    index index.html index.htm;

    # Redirect all http traffic to https
    server {
        listen 80 default_server;
        server_name _;
        return 301 https://$host$request_uri;
    }
    
    server {
        # Include generic server configuration
        include server.conf;

        # Include server configuration specific to stroom
        include server.stroom.conf;

        # Include server configuration specific to auth
        include server.auth.conf;

        # Include server configuration specific to proxy
        include server.proxy.conf;
    }
}

